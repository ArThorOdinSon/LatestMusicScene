<!-- activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Title for the opening screen -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latest Music Scene"
        android:textSize="28sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

    <!-- Button for the first music news story -->
    <Button
        android:id="@+id/story1Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:onClick="showStory1"
        android:text="DAVID KUSHNER: DAYLIGHT LYRICS AND INSPIRATION" />

    <!-- ImageView for the "Daylight" image -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="188dp"
        android:layout_below="@+id/story1Button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="105dp"
        app:srcCompat="@drawable/daylight" />

    <!-- Button for the second music news story -->
    <Button
        android:id="@+id/story2Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="showStory2"
        android:text="EXPLORING THE MEANING OF 'OUTSIDE' BY CALVIN HARRIS" />

    <!-- ImageView for the "Outside" image -->
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/story2Button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/outside" />

    <!-- Add ImageView and other elements as needed for the images -->

</RelativeLayout>
